<p id="notice"><%= notice %></p>

<h1>Birds</h1>

<div class="row">
   <% @birds.each do |bird| %>
  <div class="col-md-2">
<div class="card">
  <img src="<%= bird.image_url %>" alt="bird"/>
  <div class="card-body">
    <h4 class="card-title"><%= bird.species %></h4>
    <div class="card-text">
      <p>
        <strong>Birder: </strong><%= bird.birder %>
      </p>
      <p>
        <strong>Species: </strong><%= bird.species %>
      </p>
      <p>
        <strong>Location: </strong><%= bird.location %>
      </p>
      <p>
        <strong>Date: </strong><%= bird.date %>
      </p>
    </div>
    <button class="btn btn-primary"><%= link_to 'Show', bird %></button>
  </div>
  <div></div>
        <div><%= link_to 'Edit', edit_bird_path(bird) %> |
        <%= link_to 'Destroy', bird, method: :delete, data: { confirm: 'Are you sure?' } %></div>
</div>

        
   
</div>
 <% end %>
</div>
<%= link_to 'New Bird', new_bird_path %>
